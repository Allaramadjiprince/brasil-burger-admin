{% extends 'base.html.twig' %}

{% block title %}Zone {{ zone_livraison.nom }} - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-red">
            <i class="fas fa-map-marked-alt me-2"></i>Zone: {{ zone_livraison.nom }}
        </h1>
        <div>
            <a href="{{ path('admin_zone_livraison_edit', {'id': zone_livraison.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Modifier
            </a>
            <a href="{{ path('admin_zone_livraison_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-red text-white">
                    <h5 class="mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <p><strong>Nom:</strong> {{ zone_livraison.nom }}</p>
                    <p><strong>Prix:</strong> <span class="badge bg-success">{{ zone_livraison.prixFormatted }}</span></p>
                    <p><strong>Commandes:</strong> <span class="badge bg-blue">{{ zone_livraison.nombreCommandes }}</span></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-blue text-white">
                    <h5 class="mb-0">Quartiers ({{ zone_livraison.quartiersList|length }})</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-1">
                        {% for quartier in zone_livraison.quartiersList %}
                            <span class="badge bg-info">{{ quartier }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}