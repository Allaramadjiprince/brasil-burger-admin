{% extends 'base.html.twig' %}

{% block title %}Zones de Livraison - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-red">
            <i class="fas fa-map-marked-alt me-2"></i>Zones de Livraison
        </h1>
        <a href="{{ path('admin_zone_livraison_new') }}" class="btn btn-red">
            <i class="fas fa-plus-circle me-1"></i>Nouvelle Zone
        </a>
    </div>

    {# Table des zones #}
    <div class="card shadow-lg">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Liste des Zones de Livraison
            </h5>
        </div>
        <div class="card-body">
            {% if zones|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Quartiers</th>
                                <th>Prix livraison</th>
                                <th>Commandes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for zone in zones %}
                                <tr>
                                    <td>{{ zone.id }}</td>
                                    <td><strong>{{ zone.nom }}</strong></td>
                                    <td>
                                        {% for quartier in zone.quartiersList|slice(0, 2) %}
                                            <span class="badge bg-info me-1">{{ quartier }}</span>
                                        {% endfor %}
                                        {% if zone.quartiersList|length > 2 %}
                                            <span class="badge bg-secondary">+{{ zone.quartiersList|length - 2 }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="fw-bold text-success">{{ zone.prixFormatted }}</td>
                                    <td>
                                        <span class="badge bg-blue">{{ zone.nombreCommandes }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('admin_zone_livraison_show', {'id': zone.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_zone_livraison_edit', {'id': zone.id}) }}" 
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('admin_zone_livraison_delete', {'id': zone.id}) }}" 
                                                  onsubmit="return confirm('Supprimer cette zone ?');"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-map fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucune zone de livraison</h4>
                    <p class="text-muted">Commencez par créer votre première zone</p>
                    <a href="{{ path('admin_zone_livraison_new') }}" class="btn btn-red">
                        <i class="fas fa-plus-circle me-1"></i>Créer une zone
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}