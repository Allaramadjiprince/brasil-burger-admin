{% extends 'base.html.twig' %}

{% block title %}Modifier Livreur - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-yellow text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2"></i>Modifier {{ livreur.nomComplet }}
                        </h4>
                        <a href="{{ path('admin_livreur_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.valid ? '' : ' is-invalid')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                <span class="input-group-text">+221</span>
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control' ~ (form.telephone.vars.valid ? '' : ' is-invalid')}}) }}
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.vehicule, 'Véhicule', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.vehicule, {'attr': {'class': 'form-select' ~ (form.vehicule.vars.valid ? '' : ' is-invalid')}}) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.disponible, 'Livreur disponible', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                        </div>
                    </div>
                    
                    <div class="mt-4 border-top pt-3">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_livreur_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-red btn-lg">
                                <i class="fas fa-save me-1"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            {# Statistiques du livreur #}
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-blue text-white">
                            <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h4 class="text-red">{{ livreur.commandes|length }}</h4>
                                    <small class="text-muted">Total commandes</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-yellow">{{ livreur.nombreCommandesEnCours }}</h4>
                                    <small class="text-muted">En cours</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Statut actuel</h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                {% if livreur.disponible %}
                                    {% if livreur.peutPrendreNouvelleCommande %}
                                        <span class="badge bg-success p-2 fs-6">
                                            <i class="fas fa-check-circle me-1"></i>Disponible pour nouvelles commandes
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark p-2 fs-6">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Limite de commandes atteinte ({{ livreur.nombreCommandesEnCours }}/3)
                                        </span>
                                    {% endif %}
                                {% else %}
                                    <span class="badge bg-danger p-2 fs-6">
                                        <i class="fas fa-times-circle me-1"></i>Indisponible
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Validation Bootstrap
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endblock %}