{% extends 'base.html.twig' %}

{% block title %}Détails Produit - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-blue text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-eye me-2"></i>Détails du Produit
                        </h4>
                        <a href="{{ path('admin_produit_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="text-center mb-4">
                        {% if produit.image %}
                            <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                                 alt="{{ produit.nom }}" 
                                 class="img-fluid rounded" 
                                 style="max-height: 200px;">
                        {% else %}
                            <div class="bg-light p-5 rounded">
                                <i class="fas fa-hamburger fa-4x text-muted"></i>
                                <p class="mt-2 text-muted">Aucune image</p>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Informations</h5>
                            <table class="table">
                                <tr>
                                    <th>Nom:</th>
                                    <td>{{ produit.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Type:</th>
                                    <td>{{ produit.typeLabel }}</td>
                                </tr>
                                <tr>
                                    <th>Prix:</th>
                                    <td class="fw-bold text-success">{{ produit.prixFormatted }}</td>
                                </tr>
                                <tr>
                                    <th>Ventes:</th>
                                    <td>
                                        <span class="badge bg-primary">
                                            {{ produit.ligneCommandes|length }} vente(s)
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Description</h5>
                            <p>{{ produit.description|default('Aucune description') }}</p>
                        </div>
                    </div>
                    
                    <div class="mt-4 text-center">
                        <a href="{{ path('admin_produit_edit', {'id': produit.id}) }}" class="btn btn-yellow me-2">
                            <i class="fas fa-edit me-1"></i>Modifier
                        </a>
                        <form method="post" action="{{ path('admin_produit_delete', {'id': produit.id}) }}" class="d-inline">
                            <button type="submit" class="btn btn-red" onclick="return confirm('Supprimer ce produit?')">
                                <i class="fas fa-trash me-1"></i>Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}