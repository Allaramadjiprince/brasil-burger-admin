{% extends 'base.html.twig' %}

{% block title %}Modifier Produit - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-yellow text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2"></i>Modifier le Produit
                        </h4>
                        <a href="{{ path('admin_produit_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="mt-3">
                        <button type="submit" class="btn btn-red">
                            <i class="fas fa-save me-1"></i>Enregistrer
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}