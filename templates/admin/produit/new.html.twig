{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-red text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-hamburger me-2"></i>Ajouter un Nouveau Produit
                        </h4>
                        <a href="{{ path('admin_produit_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Retour à la liste
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid ? '' : ' is-invalid'), 'placeholder': 'Ex: Brasil Burger Classic'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.type, 'Type de produit', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-select' ~ (form.type.vars.valid ? '' : ' is-invalid')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.type) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Décrivez votre produit...'}}) }}
                        <div class="form-text">Facultatif</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prix, 'Prix (XOF)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control' ~ (form.prix.vars.valid ? '' : ' is-invalid'), 'placeholder': '0.00'}}) }}
                                <span class="input-group-text">XOF</span>
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.prix) }}
                            </div>
                        </div>
                        
                        {# CORRECTION ICI : imageFile au lieu de image #}
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.imageFile, 'Image du produit', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">Formats acceptés: JPG, PNG, GIF (max 2MB)</small>
                        </div>
                    </div>
                    
                    <div class="mt-4 border-top pt-3">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_produit_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-red btn-lg">
                                <i class="fas fa-plus-circle me-1"></i>Créer le Produit
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Informations</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Les produits apparaissent immédiatement dans l'application mobile</li>
                        <li><i class="fas fa-check text-success me-2"></i>Pensez à ajouter une image attractive</li>
                        <li><i class="fas fa-check text-success me-2"></i>Vérifiez le prix avant de créer</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Validation Bootstrap
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endblock %}