{% extends 'base.html.twig' %}

{% block title %}Produits - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-red"><i class="fas fa-hamburger me-2"></i>Gestion des Produits</h1>
        <a href="{{ path('admin_produit_new') }}" class="btn btn-red">
            <i class="fas fa-plus me-1"></i>Nouveau produit
        </a>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Burgers</h6>
                            <h3 class="mb-0">{{ produits|filter(p => p.type == 'BURGER')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hamburger fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Menus</h6>
                            <h3 class="mb-0">{{ produits|filter(p => p.type == 'MENU')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-concierge-bell fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Compléments</h6>
                            <h3 class="mb-0">{{ produits|filter(p => p.type == 'COMPLEMENT')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-french-fries fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table des produits -->
    <div class="card shadow-lg">
        <div class="card-header bg-red text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-boxes me-2"></i>Catalogue des Produits
                <span class="badge bg-yellow text-dark ms-2">{{ produits|length }}</span>
            </div>
            <div class="text-end">
                <span class="small">
                    Prix moyen : <strong>{{ (produits|reduce((sum, p) => sum + p.prix, 0) / (produits|length ?: 1))|number_format(0, ',', ' ') }} XOF</strong>
                </span>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">ID</th>
                            <th>Produit</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center">Ventes</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td class="text-center fw-bold">#{{ produit.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        {% if produit.image %}
                                            <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                                                 alt="{{ produit.nom }}" 
                                                 class="img-thumbnail" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        {% else %}
                                            <div class="img-placeholder bg-light d-flex align-items-center justify-content-center rounded" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="fas fa-hamburger text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <strong>{{ produit.nom }}</strong>
                                        <div class="small text-muted">
                                            Réf: PROD{{ produit.id }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 250px;" title="{{ produit.description }}">
                                    {{ produit.description|default('Aucune description') }}
                                </div>
                            </td>
                            <td>
                                {% if produit.type == 'BURGER' %}
                                    <span class="badge bg-danger p-2">
                                        <i class="fas fa-hamburger me-1"></i>Burger
                                    </span>
                                {% elseif produit.type == 'MENU' %}
                                    <span class="badge bg-warning p-2 text-dark">
                                        <i class="fas fa-concierge-bell me-1"></i>Menu
                                    </span>
                                {% else %}
                                    <span class="badge bg-info p-2">
                                        <i class="fas fa-french-fries me-1"></i>Complément
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-center fw-bold text-success">
                                {{ produit.prixFormatted }}
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary rounded-pill p-2">
                                    <i class="fas fa-shopping-cart me-1"></i>
                                    {{ produit.ligneCommandes|length }}
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_produit_show', {'id': produit.id}) }}" 
                                       class="btn btn-sm btn-blue" 
                                       title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    
                                    <a href="{{ path('admin_produit_edit', {'id': produit.id}) }}" 
                                       class="btn btn-sm btn-yellow" 
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    <form method="post" 
                                          action="{{ path('admin_produit_delete', {'id': produit.id}) }}" 
                                          class="d-inline"
                                          onsubmit="return confirm('Supprimer ce produit ? Cette action est irréversible.')">
                                        <button type="submit" class="btn btn-sm btn-red" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                                    <h4 class="text-muted">Aucun produit trouvé</h4>
                                    <p class="text-muted">
                                        Votre catalogue est vide. Ajoutez votre premier produit !
                                    </p>
                                    <a href="{{ path('admin_produit_new') }}" class="btn btn-red mt-3">
                                        <i class="fas fa-plus me-1"></i>Ajouter un produit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-chart-bar text-blue me-2"></i>
                        <small class="text-muted">
                            Produits : <strong>{{ produits|length }}</strong> • 
                            CA estimé : <strong class="text-success">{{ (produits|reduce((sum, p) => sum + (p.prix * p.ligneCommandes|length), 0))|number_format(0, ',', ' ') }} XOF</strong>
                        </small>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        <i class="fas fa-utensils me-1"></i>
                        Brasil Burger - Gestion du catalogue
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
}
.bg-red { background-color: #FF0000 !important; }
.bg-blue { background-color: #002776 !important; }
.bg-yellow { background-color: #FFDF00 !important; }
.btn-red { background-color: #FF0000; color: white; border: none; }
.btn-red:hover { background-color: #CC0000; }
.btn-blue { background-color: #002776; color: white; border: none; }
.btn-blue:hover { background-color: #001A5C; }
.btn-yellow { background-color: #FFDF00; color: #333; border: none; }
.btn-yellow:hover { background-color: #E6C900; }
.empty-state { padding: 40px 0; }
.table th { border-top: none; }
.card { border-radius: 10px; overflow: hidden; }
.img-placeholder { border: 1px dashed #ddd; }
.text-truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
</style>
{% endblock %}