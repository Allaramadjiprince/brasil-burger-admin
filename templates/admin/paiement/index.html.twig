{% extends 'base.html.twig' %}

{% block title %}Gestion des Paiements - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-red">
            <i class="fas fa-credit-card me-2"></i>Gestion des Paiements
        </h1>
        <div class="btn-group">
            <button type="button" class="btn btn-red dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-download me-1"></i>Exporter
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#"><i class="fas fa-file-excel me-2"></i>Excel</a></li>
                <li><a class="dropdown-item" href="#"><i class="fas fa-file-pdf me-2"></i>PDF</a></li>
            </ul>
        </div>
    </div>

    {# Statistiques #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-red text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Paiements</h6>
                            <h3 class="mb-0">{{ paiements|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-credit-card fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Paiements Réussis</h6>
                            <h3 class="mb-0">{{ paiements|filter(p => p.statut == 'PAYE')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">En Attente</h6>
                            <h3 class="mb-0">{{ paiements|filter(p => p.statut == 'EN_ATTENTE')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Échecs</h6>
                            <h3 class="mb-0">{{ paiements|filter(p => p.statut == 'ECHEC')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Filtres #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="statut" class="form-label">Statut</label>
                    <select name="statut" id="statut" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="EN_ATTENTE">En attente</option>
                        <option value="PAYE">Payé</option>
                        <option value="ECHEC">Échec</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="methode" class="form-label">Méthode</label>
                    <select name="methode" id="methode" class="form-select">
                        <option value="">Toutes les méthodes</option>
                        <option value="WAVE">Wave</option>
                        <option value="OM">Orange Money</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="date_debut" class="form-label">Date début</label>
                    <input type="date" name="date_debut" id="date_debut" class="form-control">
                </div>
                <div class="col-md-3">
                    <label for="date_fin" class="form-label">Date fin</label>
                    <input type="date" name="date_fin" id="date_fin" class="form-control">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-red">
                        <i class="fas fa-filter me-1"></i>Filtrer
                    </button>
                    <a href="{{ path('admin_paiement_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    {# Table des paiements #}
    <div class="card shadow-lg">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Liste des Paiements
                </h5>
                <div class="text-muted">
                    Total: <strong>{{ paiements|length }}</strong> paiements
                </div>
            </div>
        </div>
        <div class="card-body">
            {% if paiements|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Commande</th>
                                <th>Client</th>
                                <th>Montant</th>
                                <th>Méthode</th>
                                <th>Statut</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for paiement in paiements %}
                                <tr>
                                    <td>{{ paiement.id }}</td>
                                    <td>
                                        {% if paiement.commande %}
                                            <a href="{{ path('admin_commande_show', {'id': paiement.commande.id}) }}" 
                                               class="text-decoration-none">
                                                Commande #{{ paiement.commande.id }}
                                            </a>
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if paiement.commande and paiement.commande.client %}
                                            {{ paiement.commande.client.nom }}
                                        {% else %}
                                            <span class="text-muted">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td class="fw-bold">{{ paiement.montantFormatted }}</td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas fa-{{ paiement.methode == 'WAVE' ? 'wave-square' : 'mobile-alt' }} me-1"></i>
                                            {{ paiement.methodeLabel }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ paiement.statutColor }}">
                                            {{ paiement.statutLabel }}
                                        </span>
                                    </td>
                                    <td>{{ paiement.date|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('admin_paiement_show', {'id': paiement.id}) }}" 
                                               class="btn btn-sm btn-outline-primary"
                                               title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_paiement_edit', {'id': paiement.id}) }}" 
                                               class="btn btn-sm btn-outline-warning"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            {% if paiement.statut == 'EN_ATTENTE' %}
                                                <form method="post" action="{{ path('admin_paiement_valider', {'id': paiement.id}) }}" 
                                                      onsubmit="return confirm('Valider ce paiement ?');"
                                                      class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ paiement.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Valider">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Pagination #}
                {% if pagination is defined %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item {{ pagination.currentPage == 1 ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_paiement_index', {'page': pagination.currentPage - 1}) }}">Précédent</a>
                            </li>
                            {% for page in 1..pagination.totalPages %}
                                <li class="page-item {{ page == pagination.currentPage ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('admin_paiement_index', {'page': page}) }}">{{ page }}</a>
                                </li>
                            {% endfor %}
                            <li class="page-item {{ pagination.currentPage == pagination.totalPages ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_paiement_index', {'page': pagination.currentPage + 1}) }}">Suivant</a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-credit-card fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucun paiement enregistré</h4>
                    <p class="text-muted">Les paiements apparaîtront ici après les commandes</p>
                </div>
            {% endif %}
        </div>
        <div class="card-footer text-end">
            <div class="row">
                <div class="col-md-6 text-start">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Dernière mise à jour: {{ "now"|date('d/m/Y H:i') }}
                    </small>
                </div>
                <div class="col-md-6">
                    <div class="text-muted">
                        Total montant: 
                        <strong class="text-success">
                            {% set total = 0 %}
                            {% for paiement in paiements|filter(p => p.statut == 'PAYE') %}
                                {% set total = total + paiement.montant %}
                            {% endfor %}
                            {{ total|number_format(2, ',', ' ') }} XOF
                        </strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Initialiser les valeurs des filtres
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    
    if (urlParams.get('statut')) {
        document.getElementById('statut').value = urlParams.get('statut');
    }
    
    if (urlParams.get('methode')) {
        document.getElementById('methode').value = urlParams.get('methode');
    }
    
    if (urlParams.get('date_debut')) {
        document.getElementById('date_debut').value = urlParams.get('date_debut');
    }
    
    if (urlParams.get('date_fin')) {
        document.getElementById('date_fin').value = urlParams.get('date_fin');
    }
});
</script>
{% endblock %}