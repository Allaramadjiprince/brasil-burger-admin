{% extends 'base.html.twig' %}

{% block title %}Modifier Paiement - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-yellow text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-edit me-2"></i>Modifier Paiement #{{ paiement.id }}
                        </h4>
                        <a href="{{ path('admin_paiement_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.commande, 'Commande', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.commande, {'attr': {'class': 'form-select', 'disabled': true}}) }}
                            <div class="form-text">La commande ne peut pas être modifiée</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.montant, 'Montant (XOF)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.montant, {'attr': {'class': 'form-control' ~ (form.montant.vars.valid ? '' : ' is-invalid')}}) }}
                                <span class="input-group-text">XOF</span>
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.montant) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.methode, 'Méthode de paiement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.methode, {'attr': {'class': 'form-select' ~ (form.methode.vars.valid ? '' : ' is-invalid')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.methode) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.statut, {'attr': {'class': 'form-select' ~ (form.statut.vars.valid ? '' : ' is-invalid')}}) }}
                            <div class="form-text">
                                Changer le statut peut affecter la livraison
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.date, 'Date du paiement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control' ~ (form.date.vars.valid ? '' : ' is-invalid')}}) }}
                    </div>
                    
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Attention:</strong> La modification d'un paiement déjà validé nécessite une vérification.
                    </div>
                    
                    <div class="mt-4 border-top pt-3">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_paiement_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-red btn-lg">
                                <i class="fas fa-save me-1"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            {# Résumé #}
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-blue text-white">
                            <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statut actuel</h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <span class="badge bg-{{ paiement.statutColor }} p-2 fs-6 mb-2">
                                    {{ paiement.statutLabel }}
                                </span>
                                <p class="mb-0">
                                    <strong>Montant:</strong> {{ paiement.montantFormatted }}
                                </p>
                                <p class="mb-0">
                                    <strong>Méthode:</strong> {{ paiement.methodeLabel }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            <h6 class="mb-0"><i class="fas fa-history me-2"></i>Historique</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-1">
                                    <i class="fas fa-calendar me-1"></i>
                                    Créé le: {{ paiement.date|date('d/m/Y H:i') }}
                                </li>
                                {% if paiement.statut == 'PAYE' %}
                                    <li class="mb-1">
                                        <i class="fas fa-check-circle text-success me-1"></i>
                                        Validé par l'administrateur
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Validation Bootstrap
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endblock %}