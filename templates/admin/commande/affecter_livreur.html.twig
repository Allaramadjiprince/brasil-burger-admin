{# templates/admin/commande/affecter_livreur.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Affecter un livreur - Commande #{{ commande.id }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="header-section mb-4">
        <div class="container">
            <h1 class="h3 mb-2">
                <i class="bi bi-truck me-2"></i>Affecter un livreur
            </h1>
            <p class="mb-0 opacity-90">
                Commande #{{ commande.id }} - {{ commande.getClient().getNomComplet() }}
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-dashboard">
                <div class="card-header">
                    <h5 class="mb-0">Sélectionner un livreur disponible</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Livreur *</label>
                            <select name="livreur_id" class="form-select" required>
                                <option value="">Choisir un livreur...</option>
                                {% for livreur in livreurs %}
                                    <option value="{{ livreur.id }}">
                                        {{ livreur.getNomComplet() }} 
                                        - {{ livreur.getVehicule() }}
                                        {% if livreur.getNote() %}
                                            ({{ livreur.getNote() }}/5 ⭐)
                                        {% endif %}
                                    </option>
                                {% else %}
                                    <option disabled>Aucun livreur disponible</option>
                                {% endfor %}
                            </select>
                            {% if livreurs is empty %}
                                <div class="alert alert-warning mt-3">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Aucun livreur disponible pour le moment.
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-4">
                            <h6 class="fw-semibold">Détails de la commande :</h6>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Client :</strong> {{ commande.getClient().getNomComplet() }}
                                </li>
                                <li class="list-group-item">
                                    <strong>Adresse :</strong> {{ commande.getAdresseLivraison()|default('Non spécifiée') }}
                                </li>
                                <li class="list-group-item">
                                    <strong>Montant :</strong> {{ commande.getTotalFormatted() }}
                                </li>
                                <li class="list-group-item">
                                    <strong>Type :</strong> {{ commande.getTypeLabel() }}
                                </li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_commande_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                            {% if livreurs is not empty %}
                                <button type="submit" class="btn btn-primaire">
                                    <i class="bi bi-check-circle me-2"></i>Affecter le livreur
                                </button>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}