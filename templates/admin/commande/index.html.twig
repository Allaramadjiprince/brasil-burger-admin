{% extends 'base.html.twig' %}

{% block title %}Commandes - Brasil Burger Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-red"><i class="fas fa-shopping-cart me-2"></i>Gestion des Commandes</h1>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <i class="fas fa-filter me-2"></i>Filtres
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Statut</label>
                    <select name="statut" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="EN_ATTENTE">En attente</option>
                        <option value="VALIDE">Validé</option>
                        <option value="EN_PREPARATION">En préparation</option>
                        <option value="PRET">Prêt</option>
                        <option value="TERMINE">Terminé</option>
                        <option value="LIVRE">Livré</option>
                        <option value="ANNULE">Annulé</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Type</label>
                    <select name="type" class="form-select">
                        <option value="">Tous les types</option>
                        <option value="SUR_PLACE">Sur place</option>
                        <option value="A_EMPORTER">À emporter</option>
                        <option value="LIVRAISON">Livraison</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" name="date" class="form-control">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-red w-100">
                        <i class="fas fa-search me-1"></i>Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">En attente</h6>
                            <h3 class="mb-0">{{ commandes|filter(c => c.statut == 'EN_ATTENTE')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">En préparation</h6>
                            <h3 class="mb-0">{{ commandes|filter(c => c.statut == 'EN_PREPARATION')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Prêtes</h6>
                            <h3 class="mb-0">{{ commandes|filter(c => c.statut == 'PRET')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Livrées</h6>
                            <h3 class="mb-0">{{ commandes|filter(c => c.statut == 'LIVRE')|length }}</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table des commandes -->
    <div class="card shadow-lg">
        <div class="card-header bg-red text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-list me-2"></i>Liste des Commandes
                <span class="badge bg-yellow text-dark ms-2">{{ commandes|length }}</span>
            </div>
            <div class="text-end">
                <span class="small">
                    Total : <strong>{{ commandes|reduce((sum, c) => sum + c.total, 0)|number_format(0, ',', ' ') }} XOF</strong>
                </span>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">N°</th>
                            <th>Client</th>
                            <th>Date/Heure</th>
                            <th>Type</th>
                            <th>Total</th>
                            <th>Statut</th>
                            <th class="text-center">Paiement</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td class="text-center fw-bold">#{{ commande.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-blue text-white me-3">
                                        {{ commande.client.prenom|first|upper }}{{ commande.client.nom|first|upper }}
                                    </div>
                                    <div>
                                        <strong>{{ commande.client.prenom }} {{ commande.client.nom }}</strong>
                                        <div class="small text-muted">
                                            {{ commande.client.telephone }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold">{{ commande.date|date('d/m/Y') }}</div>
                                <div class="small text-muted">{{ commande.date|date('H:i') }}</div>
                            </td>
                            <td>
                                {% if commande.type == 'LIVRAISON' %}
                                    <span class="badge bg-danger">Livraison</span>
                                {% elseif commande.type == 'SUR_PLACE' %}
                                    <span class="badge bg-primary">Sur place</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">À emporter</span>
                                {% endif %}
                                {% if commande.type == 'LIVRAISON' and commande.zoneLivraison %}
                                    <div class="small mt-1">
                                        <i class="fas fa-map-marker-alt"></i> {{ commande.zoneLivraison.nom }}
                                    </div>
                                {% endif %}
                            </td>
                            <td class="fw-bold text-success">
                                {{ commande.total }} XOF
                            </td>
                            <td>
                                {% if commande.statut == 'EN_ATTENTE' %}
                                    <span class="badge bg-warning p-2">
                                        <i class="fas fa-clock me-1"></i>En attente
                                    </span>
                                {% elseif commande.statut == 'EN_PREPARATION' %}
                                    <span class="badge bg-primary p-2">
                                        <i class="fas fa-utensils me-1"></i>En préparation
                                    </span>
                                {% elseif commande.statut == 'PRET' %}
                                    <span class="badge bg-success p-2">
                                        <i class="fas fa-check-circle me-1"></i>Prêt
                                    </span>
                                {% elseif commande.statut == 'LIVRE' %}
                                    <span class="badge bg-info p-2">
                                        <i class="fas fa-truck me-1"></i>Livré
                                    </span>
                                {% elseif commande.statut == 'ANNULE' %}
                                    <span class="badge bg-danger p-2">
                                        <i class="fas fa-times-circle me-1"></i>Annulé
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary p-2">
                                        <i class="fas fa-circle me-1"></i>{{ commande.statut }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if commande.paiement %}
                                    {% if commande.paiement.statut == 'PAYE' %}
                                        <span class="badge bg-success">Payé</span>
                                    {% elseif commande.paiement.statut == 'EN_ATTENTE' %}
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    {% else %}
                                        <span class="badge bg-danger">Échec</span>
                                    {% endif %}
                                {% else %}
                                    <span class="badge bg-secondary">Non payé</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_commande_show', {'id': commande.id}) }}" 
                                       class="btn btn-sm btn-blue" 
                                       title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    
                                    <a href="#" 
                                       class="btn btn-sm btn-yellow" 
                                       title="Modifier statut"
                                       onclick="alert('Changer le statut de la commande #{{ commande.id }}')">
                                        <i class="fas fa-cog"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                                    <h4 class="text-muted">Aucune commande trouvée</h4>
                                    <p class="text-muted">
                                        Aucune commande enregistrée pour le moment
                                    </p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-chart-line text-blue me-2"></i>
                        <small class="text-muted">
                            Commandes : <strong>{{ commandes|length }}</strong> • 
                            CA Total : <strong class="text-success">{{ commandes|reduce((sum, c) => sum + c.total, 0)|number_format(0, ',', ' ') }} XOF</strong>
                        </small>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        <i class="fas fa-hamburger me-1"></i>
                        Brasil Burger - Gestion des commandes
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
}
.bg-red { background-color: #FF0000 !important; }
.bg-blue { background-color: #002776 !important; }
.bg-yellow { background-color: #FFDF00 !important; }
.btn-red { background-color: #FF0000; color: white; border: none; }
.btn-red:hover { background-color: #CC0000; }
.btn-blue { background-color: #002776; color: white; border: none; }
.btn-blue:hover { background-color: #001A5C; }
.btn-yellow { background-color: #FFDF00; color: #333; border: none; }
.btn-yellow:hover { background-color: #E6C900; }
.empty-state { padding: 40px 0; }
.table th { border-top: none; }
.card { border-radius: 10px; overflow: hidden; }
</style>
{% endblock %}